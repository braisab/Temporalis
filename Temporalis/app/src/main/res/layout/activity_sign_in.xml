<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    android:padding="15dp"
    tools:context=".SignIn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome de usuario:"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/eTextNome"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/boton_redondo"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contrasinal:"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/eTextpassword"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60.5dp"
            android:layout_marginLeft="60.5dp"
            android:background="@drawable/boton_redondo"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repetir contrasinal:"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/eTextRepeatpassword"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/boton_redondo"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo_e:"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/eTextcorreo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:background="@drawable/boton_redondo"
            android:inputType="textWebEmailAddress"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/eTextTelefono"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginLeft="77dp"
            android:background="@drawable/boton_redondo"
            android:inputType="phone"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Localización:"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/spinnerLocalizacion"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:background="@drawable/boton_redondo"
            android:entries="@array/parroquias"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Perfil:"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/eTextPerfil"
            android:layout_width="160dp"
            android:layout_height="123dp"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:background="@drawable/boton_redondo"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="184dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_redondo"
            android:layout_marginTop="30dp"
            android:text="Rexistrarme" />
    </LinearLayout>
</LinearLayout>